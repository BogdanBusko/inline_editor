<div class="inline-editor-container data-model=#{model}">
  <div class='clickable-item'>
    <%= text %>
  </div>
  <div class='form display-none'>

    <%- if local_assigns[:as] == :select %>
      <%= select_tag '', options_for_select(collection, active),
        class: 'form-control select', include_blank: include_blank, data: {url: save_url, attribute: attribute, model: model }
      %>
    <% end %>
  </div>
</div>
